@page
@model part4.Pages.OrdersModel
@{
    ViewData["Title"] = "Your Orders";
}
<h1>Orders</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.OrderID">Cancel</a>
                </td>
            </tr>

        }
    </tbody>
</table>